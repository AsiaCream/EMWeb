@{ 
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>毕业设计管理网站</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="stylesheet" href="~/styles/bootstrap.css" media="screen">
    <link rel="stylesheet" href="~/styles/font-awesome.min.css">
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="~/script/html5shiv.js"></script>
      <script src="~/script/respond.min.js"></script>
    <![endif]-->
    <style>
        .information{
            height:50px;
            width:200px;
            background-color:rgba(44,62,80,0.8);
            top:50%;
            z-index:1;
            position:absolute;
            left:50%;
            margin-left:-100px;
            margin-top:-100px;
            display:none;
        }
    </style>
</head>
<body>
    <div class="information"></div>
    <nav class="navbar navbar-default" style="border-radius:0;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (User.IsInRole("学生"))
                {
                    <a class="navbar-brand" asp-action="Center" asp-controller="Home">EMWeb</a>
                }
                else
                {
                    <a class="navbar-brand" asp-action="Manage" asp-controller="Admin">EMWeb</a>
                }
            </div>

            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    @if (User.IsInRole("学生"))
                    {
                        <li><a asp-action="Subject" aps-controller="Home">选题 <span class="sr-only">(current)</span></a></li>
                        <li><a asp-action="Report" asp-controller="Home">报告</a></li>
                        <li><a asp-action="SourceCode" asp-controller="Home">源代码</a></li>
                        <li><a asp-action="Thesis" asp-controller="Home">论文</a></li>
                        <li><a asp-action="Document" asp-controller="Home">文档</a></li>
                        <li><a asp-action="MySubjectLog" asp-controller="Home">日志</a></li>
                    }
                    @if (User.IsInRole("系主任"))
                    {
                        <li><a asp-action="Subject" asp-controller="Admin">选题</a></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">学院 <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a asp-action="AllCollege" asp-controller="System">查看所有学院</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">专业 <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a asp-action="AllMajor" asp-controller="System">查看所有专业</a></li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">日志 <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a asp-action="Log" asp-controller="System">系统日志</a></li>
                                <li><a asp-action="TeacherLog" asp-controller="System">教师日志</a></li>
                                <li><a asp-action="StudentLog" asp-controller="System">学生日志</a></li>
                            </ul>
                        </li>
                    }
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">毕业设计 <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="#">毕业设计选题</a></li>
                            <li><a href="#">毕业设计开题</a></li>
                            <li><a href="#">毕业设计报告</a></li>
                            <li><a href="#">毕业设计评分</a></li>
                        </ul>
                    </li>
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search...">
                    </div>
                    <button type="button" class="btn btn-info">搜索</button>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">管理中心 <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            @if (User.IsInRole("学生"))
                            {
                                <li><a asp-action="Center" asp-controller="Home">个人中心</a></li>
                            }
                            else
                            {
                                <li><a asp-action="Manage" asp-controller="Admin">个人中心</a></li>

                            }
                            <li><a href="#" id="modify">修改密码</a></li>
                            <li><a href="javascript:$('#Logout').submit()">退出</a></li>
                        </ul>
                        <form asp-action="Logout" asp-controller="Account" id="Logout"></form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    <div class="container">
        <footer>
            <div class="row">
                <div class="col-lg-12 text-center">
                    <p>Design by &copy;<a href="http://www.asiacream.cn" target="_blank">Cream</a>.</p>
                </div>
            </div>

        </footer>
    </div>
    
    <div class="modal fade" id="editpassword">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">修改密码</h4>
                </div>
                <div class="modal-body">
                    <input type="password" id="oldpwd" name="oldpwd" class="form-control" placeholder="旧密码"/><br />
                    <input type="password" id="newpwd" name="newpwd" class="form-control" placeholder="新密码" /><br />
                    <input type="password" id="confirmpwd" name="confirmpwd" class="form-control" placeholder="再次输入新密码" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">关闭</button>
                    <button type="button" id="send" class="btn btn-primary">提交</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="~/scripts/jquery-2.1.1.js"></script>
<script src="~/scripts/bootstrap.min.js"></script>
<script src="~/scripts/custom.js"></script>
<script src="~/scripts/codecomb.cascade.js"></script>
<script type="text/javascript">
    $("#modify").click(function () {
        $("#editpassword").modal("show");
    });
    $("#send").click(function () {
        var oldpwd = $("#oldpwd").val();
        var newpwd = $("#newpwd").val();
        var confirmpwd = $("#confirmpwd").val();
        if (oldpwd == "" || newpwd == "" || confirmpwd == "") {
            alert("请正确输入");
        }
        else if (newpwd != confirmpwd) {
            alert("两次输入密码不一致，请检查");
        }
        else {
            $.post("/Account/Modify", { password: oldpwd, newpwd: newpwd }, function (data) {
                if (data == "success") {
                    alert("修改成功");
                    window.location.href = "/Account/Login";
                }
                else if (data == "error") {
                    alert("旧密码输入错误，请检查");
                }
                else {
                    alert("修改失败");
                }
            });
        }
    });
</script>

