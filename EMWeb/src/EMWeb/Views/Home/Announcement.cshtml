@model IEnumerable<Announcement>
<div class="container">
    <div class="col-md-12">
        <table class="table">
            <thead>
                <tr>
                    <th>编号</th>
                    <th>标题</th>
                    <th>公告发表时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Announcement x in Model)
                {
                    <tr>
                        <td>@x.Id</td>
                        <td>@x.Title</td>
                        <td>@x.CreateTime</td>
                        <td><a asp-action="AnnouncementDetails" asp-controller="System" asp-route-id="@x.Id">查看详细</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
