@model IEnumerable<Announcement>
<div class="container">
    @if (User.IsInRole("系主任"))
    {
        <div class="row">
            <div class="col-md-12">
                <a href="#" id="addAnnounce" class="btn btn-success btn-sm">添加公告</a>
            </div>
        </div>
    }
    <div class="row">
        <div class="col-md-12">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>编号</th>
                        <th>标题</th>
                        <th>公告发表时间</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Announcement x in Model)
                    {
                        <tr>
                            <td>@x.Id</td>
                            <td>@x.Title</td>
                            <td>@x.CreateTime</td>
                            <td><a asp-action="AnnouncementDetails" asp-controller="System" asp-route-id="@x.Id" class="btn btn-primary btn-sm">查看详细</a>@if (User.IsInRole("系主任"))
                            {<a href="#" class="btn btn-warning btn-sm">修改</a>}</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="modal fade" id="addAnnouncementModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal" aria-hidden="true">
                    &times;
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    添加公告
                </h4>
            </div>
            <div class="modal-body">
                <form>
                    <input type="text" name="title" id="title" placeholder="请填写公告标题" class="form-control" /><br />
                    <textarea name="content" id="content" placeholder="请添加内容..." class="form-control" ></textarea>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger"
                        data-dismiss="modal">
                    关闭
                </button>
                <button type="button" id="sendAnnounce" class="btn btn-primary">
                    提交
                </button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal -->
</div>
<script src="~/scripts/jquery-2.1.1.js"></script>
<script type="text/javascript">
    $("#addAnnounce").click(function () {
        $("#addAnnouncementModal").modal("show");
    });
    $("#sendAnnounce").click(function () {
        var title = $("#title").val();
        var content = $("#content").val();
        if (title == "") {
            alert("请添加公告标题");
        }
        else if (content == "") {
            alert("请填写公告内容");
        }
        else {
            $.post("/System/CreateAnnouncement", { title: title, content: content }, function (data) {
                if (data == "success") {
                    alert("添加成功...");
                    window.location.reload();
                }
                else if (data == "error") {
                    alert("添加失败...");
                }
                else {
                    alert("系统错误");

                }
            });

        }

    });
</script>