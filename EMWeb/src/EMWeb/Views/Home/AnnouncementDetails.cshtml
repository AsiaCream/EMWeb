@model Announcement
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3 style="margin:0;padding:0;font-family:微软雅黑;" class="text-center">公告详细页面</h3>
            <div style="height:20px;"></div>
            <div class="panel panel-success">
                <div class="panel-heading">
                    <h3 class="panel-title">公告</h3>
                </div>
                <div class="panel-body">
                    公告标题：@Model.Title <br />
                    公告内容：@Model.Content
                </div>
                <div class="panel-footer">
                    <span class="badge">发布时间： @Model.CreateTime</span>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <a asp-action="Announcement" asp-controller="Home" class="btn btn-success">返回公告列表页面</a>
            @if (User.IsInRole("系主任"))
            {<a asp-action="EditAnnouncement" asp-controller="System" asp-route-id="@Model.Id" class="btn btn-warning">修改</a>}
        </div>
    </div>
</div>
<div style="height:50px;"></div>
