@model IEnumerable<FileInfo>

@if (User.IsInRole("系主任"))
{
    <div class="container">
        <h3 style="margin:0;padding:0;" class="text-center">毕业设计文件相关信息</h3>
        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th>编号</th>
                    <th>标题</th>
                    <th>文件类型</th>
                    <th>上传时间</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.Id</td>
                            <td>@x.Title</td>
                            <td>@x.FType</td>
                            <td>@x.CreateTime</td>
                            <td><a href="~/uploads/@x.Path" target="_blank" class="btn btn-primary" id="link">右键另存为下载</a></td>
                        </tr>
                    }
            </tbody>
        </table>
    </div>
}
