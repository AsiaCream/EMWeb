<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Search" asp-controller="Admin" method="post" id="searchfrm" class="navbar-form navbar-right" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" name="key" id="key" placeholder="已毕业学生学号/姓名...">
                </div>
                <button type="button" id="search" class="btn btn-info">搜索</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h3 style="margin:0;padding:0;font-family:微软雅黑;" class="text-center">搜索结果</h3>
            <table class="table table-hover table-striped">
                <thead>
                    <tr>
                        <th>编号</th>
                        <th>姓名</th>
                        <th>学号</th>
                        <th>学院</th>
                        <th>专业</th>
                        <th>注册时间</th>
                        <th>完成时间</th>
                        <th>题目</th>
                        <th>指导老师</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Subject x in ViewBag.Student)
            {
                        <tr>
                            <td>@x.Id</td>
                            <td>@x.Student.Name</td>
                            <td>@x.Student.Number</td>
                            <td>@x.Student.College.Title</td>
                            <td>@x.Student.Major.Title</td>
                            <td>@x.Student.CreateTime</td>
                            <td>@x.Student.GraduateTime</td>
                            <td>@x.Title</td>
                            <td>@x.Teacher.Name</td>
                            <td><a asp-action="StudentDetails" asp-controller="Admin" asp-route-id="@x.Id">查看文件</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div style="height:50px;"></div>
